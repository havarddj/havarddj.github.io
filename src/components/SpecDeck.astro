---
import SpectacleCard from "../components/SpectacleCard.astro";

interface Props {
    num: Number;
}

const {num} = Astro.props;
---

<style>
* + * {
    margin-top: 0em;
}

  .viz-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem;
  }

  .dataset-selector {
    margin-bottom: 2rem;
    width: 200px;
    padding: 0.5rem;
    border: 1px solid #582e1c;
    border-radius: 0.25rem;
    background-color: white;
    color: #582e1c;
    font-family: inherit;
  }
  .dataset-selector .dark {
    background-color: black;
    color: white;
  }

  .viz-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .viz-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  .viz-card {
    border: 1px solid rgba(88, 46, 28, 0.2);
    border-radius: 0.5rem;
    padding: 1rem;
    background-color: white;
    display: flex;
    flex-direction: column;
  }

.dark .viz-card{
    background-color: #123123;
  }

  .viz-title {
    margin-bottom: 1rem;
    color: #582e1c;
    font-weight: 500;
    text-align: center;
  }

  .viz-content {
    aspect-ratio: 1;
    flex-grow: 1;
  }

  .viz-svg {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
</style>

<div class="viz-grid">
  <!-- <h3> This is fish number {num} </h3> -->
  <SpectacleCard
    name= "barcode"
    num= {num}
    heading = "Barcode"
  />
  <SpectacleCard
    name= "spiral"
    num= {num}
    heading = "Spiral"
  />
  <SpectacleCard
    name= "cutoff"
    num= {num}
    heading = "Cutoff of spec"
  />
  <SpectacleCard
    name= "boring"
    num= {num}
    heading = "Cutoff of spec with embeddings"
  />

</div>

