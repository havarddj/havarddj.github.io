<!-- We get ugly flashes unless we put some of the theme logic in head -->

<button id="themeToggle">
  <svg width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
 <circle class="sun" cx="12" cy="12" r="4" />
    <path class="sun" d="M12 2v2m0 16v2M4.93 4.93l1.41 1.41m11.32 11.32l1.41 1.41M2 12h2m16 0h2M6.34 17.66l-1.41 1.41M19.07 4.93l-1.41 1.41" />

    <path class="moon" d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z" />
  </svg>
</button>

<script>

const handleToggleClick = () => {
  const element = document.documentElement;
  element.classList.toggle("dark");

  const isDark = element.classList.contains("dark");
  localStorage.setItem("theme", isDark ? "dark" : "light");
  console.log(document.getElementById("themeToggle"))
}

document.getElementById("themeToggle").addEventListener("click", handleToggleClick);

</script>


